      mov ah,0ah
      mov dx,stroka
      int 21h

;Пункт 1. Проверка длинны
      mov ah,[stroka+1]
      cmp ah,5
        jl BadStroka
;если все хорошо, идем дальше


;Пункт 2. Проверка равных элементов
      mov ah,[stroka+2]
      mov bh,[stroka+6]
      cmp ah,bh
      jne BadStroka
;Если все хорошо, идем дальше


;Пункт 3. Проверка того, что опредеенный элемент является цифрой
      mov ah,[stroka+6]
      cmp ah,'0'
     jl  BadStroka
      cmp ah,'9'
     jg  BadStroka
;Если все хорошо, идеем дальше


;Пункт 4. Проверка того, что определенный элемент является буквой
       mov ah,[stroka+1]
       sub ah,2
          cmp ah,'A'
     jge    comp
    comp:      cmp ah,'Z'
     jg     BadStroka
;Если все в конце концов хорошо, идем на вывод хорошего текста


  ;Вывод хорощего текста
          mov ah,09h
          mov dx,goodtext
          int 21h
       ;Конец программы
      mov ah, 08h
      int 21h
      ret


   BadStroka:
      ;Вывод плохого текста
          mov ah,09h
          mov dx,badtext
          int 21h
      ;Конец программы
      mov ah, 08h
      int 21h
      ret
;////////////////////////////////////////////////////////////////////////////////
stroka db 9,0,9 dup("$")


text0 db ' Plese,enter your string:  $'
badtext db  'Uncorrect string                                                                           $ '
goodtext db 'Correct string
